<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ndkjnidemo.wobiancao.com.recyclerviewstudy.activity.MainActivity">
    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/rv"-->

        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"/>-->
    <Button
        android:id="@+id/btn"
        android:onClick="doClick"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="gotoNext"/>
    <ndkjnidemo.wobiancao.com.recyclerviewstudy.StickyRecyclerView
        android:id="@+id/rv"
        app:StickyRecyclerView_dividerColor="@android:color/darker_gray"
        app:StickyRecyclerView_titleColor="@android:color/holo_green_light"
        app:StickyRecyclerView_dividerHeight="10dp"
        app:StickyRecyclerView_titleHeight="20dp"
        app:StickyRecyclerView_titleTextColor="@android:color/holo_blue_dark"
        android:layout_width="match_parent"
        android:layout_above="@id/btn"
        android:layout_height="match_parent"/>

</RelativeLayout>
